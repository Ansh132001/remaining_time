{
  "name": "addon_template",
  "version": "20.8.25i52",
  "description": "template for trgkanki's addon",
  "scripts": {
    "dev:js": "cross-env NODE_ENV=development webpack -w --progress",
    "build:js": "webpack --progress",
    "build": "npm-run-all build:js",
    "update:template": "npx trgkanki-template-cli update",
    "dist": "npm run build && npx trgkanki-template-cli package",
    "test": "npm-run-all test:py",
    "test:py": "nosetests src/tests"
  },
  "keywords": [
    "anki",
    "anki-addon"
  ],
  "author": "trgk",
  "license": "AGPL3",
  "devDependencies": {
    "@types/base64-js": "^1.3.0",
    "@types/webpack-env": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "base64-js": "^1.3.1",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.3",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "git-branch-is": "^4.0.0",
    "husky": "^4.2.5",
    "is-mobile": "^2.2.2",
    "js-cookie": "^2.2.1",
    "lint-staged": "^10.1.3",
    "npm-run-all": "^4.1.5",
    "sass": "^1.26.8",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "stylelint": "^13.6.0",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-scss": "^3.17.2",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "git-branch-is --not master && lint-staged && npm run test"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "*.py": [
      "black"
    ],
    "*.{scss,css}": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "@types/js-cookie": "^2.2.6"
  }
}
